<a class="anchor" id="view-articles"></a>
<section>
	<div class = "container" id="article-container">
		<div class="row">
			{{#each articles}}
				<div class="col-md-4">
					<div class="panel panel-default wall">
					  <div class="panel-heading text-center">{{title}}</div>
					  <div class="panel-body">
					  	<img src="{{image}}" class="article-image">
					  	<br>
					  	<br>
					  	<div class="icons">
					  	<a href="{{link}}"><span class="glyphicon glyphicon-sunglasses" title="View Article"></span></a>
					  	<a class="comment-btn" dataId="{{_id}}"><span class="glyphicon glyphicon-comment" title="Comment"></span></a>
					  	<a href="/save/{{_id}}" class="save-btn"><span class="glyphicon glyphicon-floppy-save" title="Save Article"></span></a>
					  	</div>
					  		
					  		
					  </div>
					</div>
				</div>
			{{/each}}
			<div class="modal fade" id="comment-modals">
		      <div class="modal-dialog" role="document">
		        <div class="modal-content">
		          <div class="modal-header">
		            <h2 class="modal-title">Tell Us What You Think</h2>
		            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		              <span aria-hidden="true">&times;</span>
		            </button>
		          </div>
		          <div class="modal-body">
		           	<form id="comment-form" method="POST">
		           		<div id="author">
			           		<label for="author">Your Name</label><br>
						  	<input type="text" name="author" placeholder="ex. John Smith" id="author-name">
					  	</div>
					  	<br>
					  	<div id="comment">
						  	<label for="comment">Your Thoughts</label><br>
						  	<textarea name="comment" id="comment-area"></textarea>
					  	</div>
					  	<br>
					  	<div>
					  		<input id="submit-btn" type="submit" value="Submit">
					  	</div>
					</form>
		          </div>
		          
			          <div>
			            <button class="viewMore">View Comments&nbsp;&nbsp;<span class="glyphicon glyphicon-new-window"></span></button>
					  </div>
				  
		          
		        </div>
		      </div>
		    </div>


			<div class="modal fade" id="saved-modals">
		      <div class="modal-dialog" role="document">
		        <div class="modal-content">
		          <div class="modal-body">
		           	<h3 class="text-center">SAVED!</h3>
		          </div>
		        </div>
		      </div>
		    </div>

			<div class="modal fade" id="view-comments-modals">
		      <div class="modal-dialog" role="document">
		        <div class="modal-content">
		          <div class="modal-body" id="comment-insert">
		          </div>
		        </div>
		      </div>
		    </div>
			
			

		</div>
	</div>
</section>

